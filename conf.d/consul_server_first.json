{
	"name": "Consul Server",
	"type": "container",
	"description": "Consul server to provide service discovery via DNS and node health checks.",
	"kind": "consul",
	"flavor": "first",
	"image": "gliderlabs/consul-server",
	"restart": true,
	"command": [
		"-advertise", "{{machine}}",
		"-bootstrap-expect", "2"
	],
	"ports": [
		"80:8500",
		"53:8600/udp",
		"53:8600",
		"8300:8300",
		"8301:8301",
		"8301:8301/udp"
	]
}